@using Microsoft.AspNetCore.Identity
@inject SignInManager<CustomIdentityUser> SignInManager
@inject UserManager<CustomIdentityUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a  class="nav-link text-dark" style="font-weight:900; padding-right: 40px" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage your account">Hello, @User.Identity.Name!</a>
    </li>
    <li class="nav-item">
        <form class="form-inline"  asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button id="button" type="submit" class="button nav-link .btn .btn-link">Logout</button>
          
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark"  asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>
