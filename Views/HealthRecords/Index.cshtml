@model IEnumerable<KenkoApp.Models.HealthRecord>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Upload">Upload New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RecordData)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MimeType)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RecordData)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MimeType)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.HealthRecordID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.HealthRecordID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.HealthRecordID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
